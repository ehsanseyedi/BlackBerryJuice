<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e7e7e7"
    tools:context=".ActivityCategoryList">

    <GridView
        android:id="@+id/listCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:scrollbarSize="2dp"
        android:divider="@null"
        android:numColumns="2"
        android:visibility="visible"
        android:layout_below="@+id/gotosearch"
        android:padding="5dp" />

    <ProgressBar
        android:id="@+id/prgLoading"
        android:indeterminateTint="@color/tameshk"
        android:indeterminateTintMode="src_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/empty_"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noconnection"
            android:layout_marginBottom="7dp" />

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert"
            foo:customFont="fonts/IRANSansMobile_Medium.ttf"
            android:textSize="14sp"
            android:id="@+id/txtAlert"
            android:gravity="center"
            android:paddingRight="25dp"
            android:paddingLeft="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gotosearch"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#a8a8a8"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:layout_alignTop="@+id/empty_"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/tameshkback"
            android:src="@drawable/ic_search"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:clickable="false" />

        <com.BlackBerryJuice.utils.TextViewPlus
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/tameshkback"
            android:textColor="@color/white"
            foo:customFont="fonts/IRANSansMobile_Medium_Persian_Digits.ttf"
            android:textSize="@dimen/medfont"
            android:inputType="text"
            android:singleLine="true"
            android:gravity="center|right"
            android:paddingRight="15dp"
            android:textColorHint="@color/white"
            android:clickable="false"
            android:text="دسته بندی" />
    </LinearLayout>

</RelativeLayout>