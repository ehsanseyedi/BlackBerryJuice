<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    tools:context="com.BlackBerryJuice.Review">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="top|center"
        android:paddingTop="10dp">

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            foo:customFont="fonts/IRANSansMobile_Medium.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="استاتوس خرید"
            android:id="@+id/status"
            android:textSize="@dimen/medfont" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Medium_Persian_Digits.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="16465363"
                android:id="@+id/rahgir"
                android:textSize="@dimen/largefont"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/price"
                android:layout_marginTop="2dp" />

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Light.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="کدرهگیری:"
                android:id="@+id/rahgirtext"
                android:textSize="@dimen/smallfont"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_weight="50">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center">

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Medium_Persian_Digits.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="لیست سفارش:"
                android:textSize="@dimen/smallfont"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/ortext" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/scrollView"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.BlackBerryJuice.utils.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        foo:customFont="fonts/IRANSansMobile_Light_Persian_Digits.ttf"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="3 عدد لیمونات 24000 تومان \n 5 عدد افتر ایت 40000 تومان \n  1 عدد رزرو میز 2 نفره، برای 1 ساعت، تولد 10000 تومان \n  15 عدد سرخ 120000 تومان \n  36 عدد سان شاین 540000 تومان \n  "
                        android:textSize="@dimen/smallfont"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/or"
                        android:gravity="center" />
                </LinearLayout>
            </ScrollView>

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Medium_Persian_Digits.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="زمان رزرو:"
                android:textSize="@dimen/smallfont"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/reztext" />

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Light_Persian_Digits.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="27 اسفند 1394 ساعت 16:30"
                android:textSize="@dimen/smallfont"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/rez" />

            <com.BlackBerryJuice.utils.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:customFont="fonts/IRANSansMobile_Light_Persian_Digits.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="لطفا در صورت نیاز از این صفحه اسکرین شات تهیه کنید"
                android:textSize="@dimen/verysmallfont"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/again"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/themainbutton"
                android:text="تلاش مجدد"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp" />

            <Button
                android:id="@+id/back_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/themainbutton"
                android:text="بازگشت"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
