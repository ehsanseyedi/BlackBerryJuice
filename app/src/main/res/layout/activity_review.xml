<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    tools:context="com.BlackBerryJuice.Review"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="top|center"
        android:layout_weight="50"
        android:paddingTop="20dp">

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            foo:customFont="fonts/IRANSansMobile_Medium.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="آدرس فعلی"
            android:id="@+id/now"
            android:textSize="@dimen/smallfont"
            android:layout_marginTop="10dp" />

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            foo:customFont="fonts/IRANSansMobile_Light.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="زمانی برای ارسال سفارش خود انتخاب کنید"
            android:id="@+id/nowaddress"
            android:textSize="@dimen/smallfont"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            foo:customFont="fonts/IRANSansMobile_Medium.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="در صورتی که میخواهید به آدرس دیگری ارسال شود، آنرا وارد کنید در غیر این صورت این فیلد را خالی بگذارید"
            android:id="@+id/now2"
            android:textSize="@dimen/smallfont"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:id="@+id/newaddress"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:hint="آدرس جدید"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/smallfont"
            android:textColor="@color/transparent_black_seventy"
            android:textColorHint="@color/EditText_Color_Hint"
            android:gravity="top|right"
            android:padding="10dp"
            android:scrollbarStyle="outsideInset"
            android:fadeScrollbars="false"
            android:background="@drawable/backg_2"
            android:scrollbars="vertical"
            android:scrollbarSize="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_weight="50">

        <com.BlackBerryJuice.utils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            foo:customFont="fonts/IRANSansMobile_Light.ttf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="زمانی برای ارسال سفارش خود انتخاب کنید"
            android:id="@+id/textView3"
            android:textSize="@dimen/smallfont"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:id="@+id/Date_Pick"
                android:background="@drawable/backg_2"
                android:layout_weight="0.8"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cal_1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:padding="12dp"
                    android:id="@+id/cal_1" />
                <com.BlackBerryJuice.utils.TextViewPlus
                    android:id="@+id/Date_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تاریخ مورد نظر را انتخاب کنید"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    foo:customFont="fonts/IRANSansMobile_Light_Persian_Digits.ttf"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:id="@+id/Time_Pick"
                android:background="@drawable/backg_2"
                android:layout_weight="0.8"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/time_1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:padding="12dp"
                    android:id="@+id/time_1" />

                <com.BlackBerryJuice.utils.TextViewPlus
                    android:id="@+id/Time_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان مورد نظر را انتخاب کنید"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    foo:customFont="fonts/IRANSansMobile_Light_Persian_Digits.ttf"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center">

            <Button
                android:id="@+id/paay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/themainbutton"
                android:text="پرداخت"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
