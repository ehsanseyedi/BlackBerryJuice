<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AppCompat.NoActionBar"
    android:background="@color/white"
    tools:context=".ActivityMainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/Social"
        android:layout_alignParentTop="true"
        android:weightSum="100">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/Slider"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="32">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                custom:pager_animation="Default"
                custom:auto_cycle="true"
                custom:indicator_visibility="visible"
                custom:pager_animation_span="1100"
                android:layout_height="match_parent"/>

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                custom:selected_color="#0095BF"
                custom:unselected_color="#55333333"
                custom:selected_drawable="@drawable/bird"
                custom:shape="oval"
                custom:selected_padding_left="5dp"
                custom:selected_padding_right="5dp"
                custom:unselected_padding_left="5dp"
                custom:unselected_padding_right="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                custom:selected_width="6dp"
                custom:selected_height="6dp"
                custom:unselected_width="6dp"
                custom:unselected_height="6dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="bottom|center">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/UserText"
                android:layout_below="@+id/Slider"
                android:gravity="center|right"
                android:background="@color/tameshk_lightgray">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/profile"
                    android:src="@drawable/userr"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true" />

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/profile"
                    android:layout_toStartOf="@+id/profile"
                    android:gravity="center">

                    <com.BlackBerryJuice.MarqueeView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/horizontalScrollView"
                        android:scrollbars="none"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentBottom="false"
                        android:visibility="visible"
                        android:clickable="false"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <com.BlackBerryJuice.utils.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test"
                            foo:customFont="fonts/IRANSansMobile_Medium.ttf"
                            android:id="@+id/scrollingtext"
                            android:singleLine="true"
                            android:focusable="false"
                            android:textDirection="rtl"
                            android:gravity="right"
                            android:focusableInTouchMode="false"
                            android:paddingRight="25dp"
                            android:paddingLeft="25dp" />
                    </com.BlackBerryJuice.MarqueeView>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/Functions"
            android:visibility="visible"
            android:weightSum="100"
            android:gravity="center"
            android:layout_above="@+id/Gallery"
            android:layout_below="@+id/UserText"
            android:layout_weight="34">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/main_layout_shop"
                android:id="@+id/Order_Cat_Button"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/main_layout_shop_1"
                    android:padding="7dp" />

                <com.BlackBerryJuice.utils.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Layout_Shop_Text"
                    foo:customFont="fonts/IRANSansMobile_Medium.ttf"
                    android:textSize="@dimen/medfont"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/main_layout_left"
                    android:padding="7dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/main_layout_reservation"
                android:id="@+id/Reservation_Button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/main_layout_reservation_1"
                    android:padding="7dp" />

                <com.BlackBerryJuice.utils.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Layout_Reservation_Text"
                    foo:customFont="fonts/IRANSansMobile_Medium.ttf"
                    android:textSize="@dimen/medfont"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="0dp"
                    android:src="@drawable/main_layout_left"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="7dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/Gallery"
            android:visibility="visible"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="22">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/tameshk_lightgray"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:weightSum="100"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/more"
                        android:id="@+id/gogal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="10dp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="30">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            android:layout_weight="15"
                            android:adjustViewBounds="true"
                            android:id="@+id/g3"
                            android:layout_gravity="left|bottom" />

                        <ProgressBar
                            android:id="@+id/pr3"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/tameshk"
                            android:indeterminateTintMode="src_in"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:clickable="false" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="30">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            android:layout_weight="15"
                            android:adjustViewBounds="true"
                            android:id="@+id/g2"
                            android:layout_gravity="left|bottom" />

                        <ProgressBar
                            android:id="@+id/pr2"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/tameshk"
                            android:indeterminateTintMode="src_in"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:clickable="false" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="30">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            android:layout_weight="15"
                            android:adjustViewBounds="true"
                            android:id="@+id/g1"
                            android:layout_gravity="left|bottom" />

                        <ProgressBar
                            android:id="@+id/pr1"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/tameshk"
                            android:indeterminateTintMode="src_in"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:clickable="false" />

                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/Social"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/footer"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView6"
            android:src="@drawable/site"
            android:padding="15dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/telegram_link"
            android:src="@drawable/telegram"
            android:padding="15dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/insta_link"
            android:src="@drawable/insta"
            android:padding="15dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/about_button"
            android:src="@drawable/blackicon"
            android:padding="15dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/profile2"
            android:src="@drawable/userw"
            android:padding="15dp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>