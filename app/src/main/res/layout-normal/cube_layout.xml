<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@color/footer"
    tools:context=".ActivityAbout"
    android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <requestFocus/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cube_logo_2"
                android:layout_marginTop="25dp" />

            <com.BlackBerryJuice.utils.TextViewPlus
                android:id="@+id/vis_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سایت توسعه دهنده"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center"
                android:textColor="#000000"
                foo:customFont="fonts/IRANSansMobile_Medium.ttf"
                android:layout_marginTop="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/backg_2" />

        </LinearLayout>
</LinearLayout>